---
import Layout from "../layouts/Layout.astro";
import '../styles/global.css';
import CommunityGrid from "../components/CommunityGrid.tsx";

const items = [
  {
    title: "destacados",
    subtitle: "Lo más relevante esta semana.",
    image: "/Comunidad/telefono.png",
    reverse: false,
  },
  {
    title: "Fotos",
    subtitle: "Fotos compartidas por los viajeros.",
    image: "/Comunidad/tradicion.png",
    reverse: true,
  },
  {
    title: "recomendaciones",
    subtitle: "Tips para mejorar tu experiencia.",
    image: "/Comunidad/recomendaciones.png",
    reverse: false,
  },
  {
    title: "opiniones",
    subtitle: "Lo que piensan los viajeros.",
    image: "/Comunidad/opiniones.png",
    reverse: true,
  },
];

const temas = [
  "Últimos viajes",
  "Experiencias en Chichén Itzá",
  "Guía de transporte en Yucatán",
  "Recomendaciones de comida",
  "Mejores rutas para mochileros",
  "Fotografía de naturaleza",
  "Cultura y tradiciones mayas",
];
---
<Layout title="Comunidad - Maya Trip Express">

<section class="min-h-screen w-full text-[#1a1a1a]">

  <!-- LAYOUT DE FORO -->
  <div class="flex min-h-screen">

    <!-- SIDEBAR -->
    <aside class="hidden md:flex flex-col w-72 bg-white/70 backdrop-blur-xl border-r border-black/10 p-6 sticky top-0 h-screen shadow-lg">

      <h3 class="text-2xl font-bold text-[#0f172a] mb-4">
        Temas interesantes
      </h3>

      <ul class="space-y-3 text-lg">
        {temas.map((t) => (
          <li class="p-3 bg-white/60 rounded-xl hover:bg-[#2E7D32] hover:text-white cursor-pointer transition-all shadow-sm">
            {t}
          </li>
        ))}
      </ul>

    </aside>

    <!-- CONTENIDO PRINCIPAL -->
    <main class="flex-1 p-8 md:p-12">

      <!-- Encabezado -->
      <div class="text-left mb-12">
        <h2 class="text-5xl md:text-6xl font-black text-[#0f172a] uppercase tracking-tight">
          Comunidad
        </h2>
        <p class="text-lg md:text-xl mt-2 text-[#334155] max-w-2xl">
          Un espacio para conectar con otros viajeros, compartir fotos, dar recomendaciones y conocer nuevas experiencias.
        </p>
      </div>

      <!-- Contenedor del grid -->
      <div class="
        backdrop-blur-xl 
        bg-white/50 
        border border-black/10 
        shadow-2xl 
        rounded-3xl 
        p-6 md:p-10 
      ">
        <CommunityGrid items={items} client:load />
      </div>
    </main>

  </div>

</section>

</Layout>
