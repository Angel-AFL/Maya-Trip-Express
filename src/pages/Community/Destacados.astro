---
import Layout from "../../layouts/Layout.astro";
import "../../styles/global.css";

const destacados = [
  {
    title: "Nueva ruta premium",
    description:
      "Esta semana lanzamos una experiencia exclusiva donde podrás explorar zonas arqueológicas de forma más cómoda y con guías certificados.",
    image: "https://images.unsplash.com/photo-1523413651479-597eb2da0ad6",
  },
  {
    title: "Evento Maya del mes",
    description:
      "Los viajeros participaron en talleres culturales con músicos tradicionales y artesanos locales.",
    image: "https://images.unsplash.com/photo-1519681393784-d120267933ba",
  },
];
---

<Layout title="Destacados - Maya Trip Express">
<section class="w-full bg-papel text-black py-12 px-4 md:px-8 font-sans">
  <div class="max-w-6xl mx-auto">

    <h2 class="text-5xl md:text-6xl mb-10 text-center font-bold">Destacados</h2>

    <div class="flex flex-col gap-12">
      {destacados.map((item) => (
        <div class="flex flex-col md:flex-row gap-8 items-center border-b border-gray-400 pb-8">
          
          <div class="md:w-1/2 overflow-hidden rounded-2xl shadow-md">
            <img src={item.image} class="w-full h-[280px] object-cover hover:scale-105 transition duration-500"/>
          </div>

          <div class="md:w-1/2">
            <h3 class="text-3xl font-bold text-[#2E7D32] mb-3">{item.title}</h3>
            <p class="text-lg text-gray-800 leading-relaxed">{item.description}</p>
          </div>

        </div>
      ))}
    </div>
       <div class="mt-10">
            <a href="/comunidad" class="px-6 py-3 bg-black text-white rounded-lg shadow-md hover:bg-gray-900 transition">
             ← Regresar
            </a>
      </div>
  </div>
</section>
</Layout>
