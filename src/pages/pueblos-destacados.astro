---
import Layout from "../layouts/Layout.astro";
import '../styles/global.css';

const items = [
  {
    title: "Valladolid",
    subtitle: "Un Pueblo Mágico lleno de historia, cenotes, gastronomía y belleza colonial.",
    image: "/pueblos/valladolid.jpg",
  },
  {
    title: "Izamal",
    subtitle: "La Ciudad Amarilla, famosa por sus calles icónicas y su impresionante convento.",
    image: "/pueblos/izamal.jpg",
  },
  {
    title: "Bacalar",
    subtitle: "Conocida por su Laguna de los Siete Colores, un paraíso natural incomparable.",
    image: "/pueblos/bacalar.jpg",
  }
];
---

<Layout title="Pueblos Destacados - Maya Trip Express">

<section class="relative w-full min-h-screen py-20 px-6 md:px-10 bg-gradient-to-br from-blue-100 via-yellow-50 to-blue-200 overflow-hidden">

  <!-- FONDO ANIMADO -->
  <div class="absolute inset-0 pointer-events-none opacity-60 animate-bg">
    <div class="absolute w-96 h-96 bg-blue-300 rounded-full blur-3xl top-10 left-20 opacity-30"></div>
    <div class="absolute w-96 h-96 bg-yellow-300 rounded-full blur-3xl bottom-10 right-20 opacity-30"></div>
  </div>

  <div class="max-w-7xl mx-auto text-center relative z-10">

    <!-- TÍTULO -->
    <h1 class="text-6xl md:text-7xl font-extrabold bg-gradient-to-r from-blue-700 via-yellow-500 to-blue-700 bg-clip-text text-transparent drop-shadow-xl">
      Pueblos Destacados
    </h1>

    <p class="text-2xl text-gray-800 mt-6 mb-16 font-medium drop-shadow">
      Exploración, cultura y belleza natural en un recorrido inolvidable.
    </p>

    <!-- CARRUSEL ULTRA PREMIUM -->
    <div class="overflow-hidden relative">
      <div 
        class="flex gap-10 animate-scroll-smooth"
        style="width: calc(400px * 6)"
      >
        {items.concat(items).map((item) => (
          <div class="w-[400px] flex-shrink-0 rounded-[2.5rem] overflow-hidden shadow-2xl bg-white bg-opacity-20 backdrop-blur-xl border border-white/30 hover:scale-[1.03] hover:shadow-[0_20px_40px_rgba(0,0,0,0.25)] transition-all duration-700">

            <!-- IMAGEN -->
            <div class="relative">
              <img src={item.image} alt={item.title} class="w-full h-64 object-cover" />

              <!-- Overlay degradado -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
            </div>

            <!-- TEXTO -->
            <div class="p-7 text-left">
              <h3 class="text-4xl font-extrabold text-blue-700 drop-shadow">
                {item.title}
              </h3>
              <p class="text-lg text-gray-800 mt-3 italic font-semibold">
                {item.subtitle}
              </p>
            </div>

          </div>
        ))}
      </div>
    </div>

    <!-- BOTÓN NEXT -->
    <div class="flex justify-end mt-10">
      <a href="/" class="text-xl font-bold tracking-widest group text-blue-800 hover:text-blue-600 transition">
        NEXT <span class="inline-block transition-transform group-hover:translate-x-2">»</span>
      </a>
    </div>

  </div>
</section>

</Layout>

<style>
  /* SCROLL SUAVE */
  @keyframes scroll-smooth {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  .animate-scroll-smooth {
    animation: scroll-smooth 22s linear infinite;
  }

  /* FONDO ANIMADO SUAVE */
  @keyframes floating-bg {
    0% { transform: translateY(0px) translateX(0px) scale(1); }
    50% { transform: translateY(40px) translateX(-30px) scale(1.1); }
    100% { transform: translateY(0px) translateX(0px) scale(1); }
  }
  .animate-bg div {
    animation: floating-bg 12s ease-in-out infinite;
  }
</style>
